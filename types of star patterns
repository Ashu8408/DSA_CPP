#include <iostream>
using namespace std;

void SimpleTriangle(int n){
  for(int i=0; i<=n; i++){
    for(int j=0; j<i; j++){
      cout<<"*";
    }
    cout<<endl;
  }
}

void InvertedTriangle(int n){
  for(int i=n; i>=1; i--){
    for(int j=0; j<i; j++){
      cout<<"*";
    }
    cout<<endl;
  }
}

void LeftPyramid(int n){
  for(int i=0; i<=n; i++){
    for(int j=0; j<i; j++){
      cout<<"*";
    }
    cout<<endl;
  }
  for(int i=n; i>=1;i--){
    for (int j=0; j<i; j++){
      cout<<"*";
    }
    cout<<endl;
  }
}

void Pyramid(int n){
  for(int i=1; i<=n; i++){
    for(int j=1; j<=2*(n-1); j++){
      cout<<" ";
    } 
    for(int k=1; k<2*i; k++){
      cout<<"*";
    }
    cout<<endl;
  }
}

int main() {
  Pyramid(5);
}
